{
  "name": "sql_agent",
  "description": "SQL agent for querying sales data, revenue metrics, and business analytics from the Fabric Lakehouse",
  "parameters": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string",
        "description": "User's natural language query about sales data or business metrics"
      },
      "user_id": {
        "type": "string", 
        "description": "User ID for RBAC filtering"
      }
    },
    "required": ["query", "user_id"]
  },
  "agents": ["sql_agent"],
  "metadata": {
    "agent_type": "sql",
    "category": "data_query",
    "underlying_functions": ["execute_sql_query"],
    "data_sources": ["fabric_lakehouse"],
    "partition_key": "sql_agent"
  },
  "id": "sql_agent"
}