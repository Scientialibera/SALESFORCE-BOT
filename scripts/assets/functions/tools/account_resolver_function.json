{
  "id": "account_resolver_function",
  "agent_type": "hybrid",
  "function_name": "resolve_account_context",
  "description": "Resolve ambiguous account references and provide contextual information",
  "parameters": {
    "type": "object",
    "properties": {
      "account_hint": {
        "type": "string",
        "description": "Partial or ambiguous account name or identifier"
      },
      "context": {
        "type": "string",
        "description": "Additional context about the query"
      },
      "confidence_threshold": {
        "type": "number",
        "description": "Minimum confidence score for matches",
        "default": 0.7,
        "minimum": 0.1,
        "maximum": 1.0
      }
    },
    "required": ["account_hint"]
  },
  "return_type": {
    "type": "object", 
    "description": "Account resolution results with confidence scores"
  },
  "examples": [
    {
      "input": {"account_hint": "SF", "context": "CRM company"},
      "description": "Resolve 'SF' to 'Salesforce' in CRM context"
    }
  ],
  "safety_guidelines": [
    "Verify account access permissions",
    "Provide confidence scores for disambiguation",
    "Handle ambiguous queries gracefully"
  ]
}
