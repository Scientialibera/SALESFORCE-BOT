# Orchestrator Configuration

# Application Settings
APP_NAME=MCP Orchestrator
VERSION=1.0.0
DEBUG=false
DEV_MODE=true
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["*"]

# Azure OpenAI
AOAI_ENDPOINT=https://your-aoai-instance.openai.azure.com/
AOAI_CHAT_DEPLOYMENT=gpt-4
AOAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Cosmos DB
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DATABASE_NAME=salesforce_bot
COSMOS_CHAT_CONTAINER=chat_history
COSMOS_PROMPTS_CONTAINER=prompts

# MCP Servers (JSON format)
# Example: {"salesforce_mcp": "http://localhost:8001"}
MCP_SERVERS={"salesforce_mcp": "http://localhost:8001"}

# Role to MCP Mapping (JSON format)
# Example: {"admin": ["salesforce_mcp"], "sales_rep": ["salesforce_mcp"]}
ROLE_MCP_MAPPING={"admin": ["salesforce_mcp"], "sales_manager": ["salesforce_mcp"], "sales_rep": ["salesforce_mcp"]}

# Service Authentication
SERVICE_JWT_SECRET=your-secret-key-change-in-production
SERVICE_JWT_EXPIRY_MINUTES=60
