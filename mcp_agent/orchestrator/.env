# Orchestrator Configuration

# Application Settings
APP_NAME=MCP Orchestrator
VERSION=1.0.0
DEBUG=true
DEV_MODE=true
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["*"]

# Azure OpenAI
AOAI_ENDPOINT=https://salesforcebot-aoai-eastus2.cognitiveservices.azure.com
AOAI_CHAT_DEPLOYMENT=gpt-4.1
AOAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Cosmos DB
COSMOS_ENDPOINT=https://salesforcebot-cosmos-sql.documents.azure.com:443/
COSMOS_DATABASE_NAME=appdb
COSMOS_CHAT_CONTAINER=unified_data
COSMOS_PROMPTS_CONTAINER=prompts

# MCP Servers (JSON format)
MCP_SERVERS={"salesforce_mcp": "http://localhost:8001"}

# Role to MCP Mapping (JSON format)
ROLE_MCP_MAPPING={"admin": ["salesforce_mcp"], "sales_manager": ["salesforce_mcp"], "sales_rep": ["salesforce_mcp"]}

# Service Authentication
SERVICE_JWT_SECRET=dev-secret-key-change-in-production
SERVICE_JWT_EXPIRY_MINUTES=60
